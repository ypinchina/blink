/* components/episode/episode.wxss */
.episode-container {
  display: flex;
  flex-direction: row;  
}
.index-container {
  height: 60rpx;
  display: inline-flex;
  align-items: baseline;
}
.index {
  font-weight: 800;
  font-size: 60rpx;
  line-height: 60rpx;
  margin-right: 14rpx;
}
.date-container {
  display: flex;
  flex-direction: column;
  height: 60rpx;
  margin-top: 5rpx;
}
.line {
  border-left: 1px solid #000;
  height: 44rpx;
  margin-right: 14rpx;
}
.month {
  font-size: 24rpx;
  line-height: 24rpx;
}
.year {
  font-size: 20rpx;
}