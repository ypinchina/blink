/* pages/book/book.wxss */
.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.sub-container {
  margin-top: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f5f5f5;
}

.box {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-radius: 50rpx;
  background-color: #f5f5f5;
  color: #999;
  width: 700rpx;
  height: 34rpx;
}
.header {
  position: fixed;
  z-index: 99;
  background-color: #ffffff;
  height:100rpx;
  width:100%;
  border-top:1px solid #f5f5f5;
  border-bottom:1px solid #f5f5f5;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  box-shadow:0 0 3px 0 #e3e3e3; 
}
.book-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 0 90rpx;
  justify-content: space-between;
}
.book-container .book-cmp {
  margin-bottom: 30rpx;
}
.head-img{
  width:106rpx;
  height:34rpx;
  margin-top:40rpx;
}
.box image {
  width: 14rpx;
  height: 14rpx;
  margin-right: 10rpx;
  margin-bottom: -2px;
}