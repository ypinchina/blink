.detail-container {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-bottom: 100rpx;
  font-size: 28rpx;
  color: #666;
}
.vertical {
  display: flex;
  flex-direction: column;
}
.description {
  margin-right: 30rpx;
  color: #999;
}